@model  BudgetViewModel

<div class="mb-3 d-flex justify-content-between align-items-center">
    <button type="button" class="btn btn-success" id="openAddTransactionModalBtn">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
        </svg>
        Add New Transaction
    </button>
    
    <div class="d-flex align-items-center">
        <label for="categoryFilter" class="me-2 mb-0">Filter by Category:</label>
        <select class="form-select" id="categoryFilter" style="width: 200px;">
            <option value="">All Categories</option>
            @if (Model.Categories != null)
            {
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            }
        </select>
    </div>
</div>

<table id="records" class="table">
    <tbody>
        @foreach (var transaction in Model.Transactions)
        {
            <tr class="list-row">
                <td class="d-none">
                    @Html.DisplayFor(modelItem => transaction.Id)
                </td>
                <td class="transaction-cell">
                    <div class="transaction-date">
                        @(DateTime.TryParse(transaction.Date, out DateTime date) ? date.ToString("dd/MM/yyyy") : transaction.Date)
                    </div>
                    <div class="transaction-name">
                        @Html.DisplayFor(modelItem => transaction.Name)
                    </div>
                    <div style="margin-top: 0.5rem;">
                        @if (transaction.TransactionType == TransactionType.Income)
                        {
                            <span class="transaction-type-income">
                                💰 @Html.DisplayFor(modelItem => transaction.TransactionType)
                            </span>
                        }
                        else
                        {
                            <span class="transaction-type-expense">
                                💸 @Html.DisplayFor(modelItem => transaction.TransactionType)
                            </span>
                        }
                    </div>
                </td>

                <td class="transaction-category">
                    🏷️ @Html.DisplayFor(modelItem => transaction.Category)
                </td>

                <td class="transaction-amount">
                    @if (transaction.TransactionType == TransactionType.Income)
                    {
                        <div class="transaction-amount-income">
                            +$@Html.DisplayFor(modelItem => transaction.Amount)
                        </div>
                    }
                    else
                    {
                        <div class="transaction-amount-expense">
                            -$@Html.DisplayFor(modelItem => transaction.Amount)
                        </div>
                    }
                </td>

                <td class="d-none">
                    @Html.DisplayFor(modelItem => transaction.CategoryId)
                </td>

                <td class="d-none">
                    @transaction.TransactionType
                </td>
                
                <td class="buttons-cell">
                    <button type="button" class="btn btn-danger openDeleteTransactionModalBtn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                            <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                        </svg>
                    </button>

                    <button type="button" class="btn btn-warning openUpdateTransactionModalBtn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                            <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z" />
                        </svg>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Delete Transaction Modal -->
<div class="modal fade" id="deleteTransactionModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Transaction</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this transaction?
                <input type="hidden" id="deleteTransactionId" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div>

<!-- Update Transaction Modal -->
<div class="modal fade" id="updateTransactionModal" tabindex="-1" aria-labelledby="updateModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updateModalLabel">Update Transaction</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="updateTransactionForm">
                    <input type="hidden" id="updateTransactionId" />
                    
                    <div class="mb-3">
                        <label for="updateName" class="form-label">Name</label>
                        <input type="text" class="form-control" id="updateName" required />
                    </div>
                    
                    <div class="mb-3">
                        <label for="updateDate" class="form-label">Date</label>
                        <input type="date" class="form-control" id="updateDate" required />
                    </div>
                    
                    <div class="mb-3">
                        <label for="updateAmount" class="form-label">Amount</label>
                        <input type="number" class="form-control" id="updateAmount" step="0.01" required />
                    </div>
                    
                    <div class="mb-3">
                        <label for="updateTransactionType" class="form-label">Type</label>
                        <select class="form-control" id="updateTransactionType" required>
                            <option value="1">Income</option>
                            <option value="0">Expense</option>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label for="updateCategoryId" class="form-label">Category</label>
                        <select class="form-control" id="updateCategoryId" required>
                            @if (Model.Categories != null)
                            {
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            }
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="confirmUpdateBtn">Update</button>
            </div>
        </div>
    </div>
</div>

<!-- Add Transaction Modal -->
