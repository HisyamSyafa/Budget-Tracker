@model  BudgetViewModel

<div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 glass p-3 rounded-3 shadow-sm">
    <div class="d-flex align-items-center gap-3">
        <h4 class="mb-0 fw-bold text-primary">Transactions</h4>
        <select class="form-select form-select-sm" id="categoryFilter" style="width: auto; min-width: 150px;">
            <option value="">All Categories</option>
            @if (Model.Categories != null)
            {
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            }
        </select>
    </div>
    
    <button type="button" class="btn btn-primary mt-3 mt-md-0" id="openAddTransactionModalBtn">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-lg me-2" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z"/>
        </svg>
        New Transaction
    </button>
</div>

<div class="table-responsive">
    <table id="records" class="table table-hover align-middle">
        <thead>
            <tr>
                <th scope="col">Date/Name</th>
                <th scope="col">Category</th>
                <th scope="col" class="text-end">Amount</th>
                <th scope="col" class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Model.Transactions)
            {
                <tr>
                    <td class="d-none">@transaction.Id</td>
                    
                    <td>
                        <div class="d-flex flex-column">
                            <span class="fw-bold text-dark">@transaction.Name</span>
                            <small class="text-secondary">
                                @(DateTime.TryParse(transaction.Date, out DateTime date) ? date.ToString("MMM dd, yyyy") : transaction.Date)
                            </small>
                            <div class="mt-1">
                                @if (transaction.TransactionType == TransactionType.Income)
                                {
                                    <span class="badge badge-custom badge-income">Income</span>
                                }
                                else
                                {
                                    <span class="badge badge-custom badge-expense">Expense</span>
                                }
                            </div>
                        </div>
                    </td>

                    <td>
                        <div class="d-flex align-items-center text-secondary">
                            <span class="me-2">🏷️</span> @transaction.Category
                        </div>
                    </td>

                    <td class="text-end">
                        <span class="transaction-amount @(transaction.TransactionType == TransactionType.Income ? "text-income" : "text-expense")">
                            @(transaction.TransactionType == TransactionType.Income ? "+" : "-")$@transaction.Amount
                        </span>
                    </td>

                    <td class="d-none">@transaction.CategoryId</td>
                    <td class="d-none">@transaction.TransactionType</td>
                    
                    <td class="text-end">
                        <div class="btn-group">
                            <button type="button" class="btn btn-link text-warning p-2 openUpdateTransactionModalBtn" title="Edit">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                                </svg>
                            </button>
                            <button type="button" class="btn btn-link text-danger p-2 openDeleteTransactionModalBtn" title="Delete">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                    <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                                </svg>
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Delete Transaction Modal -->
<div class="modal fade" id="deleteTransactionModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Transaction</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this transaction?
                <input type="hidden" id="deleteTransactionId" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div>

<!-- Update Transaction Modal -->
<div class="modal fade" id="updateTransactionModal" tabindex="-1" aria-labelledby="updateModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updateModalLabel">Update Transaction</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="updateTransactionForm">
                    <input type="hidden" id="updateTransactionId" />
                    
                    <div class="mb-3">
                        <label for="updateName" class="form-label">Name</label>
                        <input type="text" class="form-control" id="updateName" required />
                    </div>
                    
                    <div class="mb-3">
                        <label for="updateDate" class="form-label">Date</label>
                        <input type="date" class="form-control" id="updateDate" required />
                    </div>
                    
                    <div class="mb-3">
                        <label for="updateAmount" class="form-label">Amount</label>
                        <input type="number" class="form-control" id="updateAmount" step="0.01" required />
                    </div>
                    
                    <div class="mb-3">
                        <label for="updateTransactionType" class="form-label">Type</label>
                        <select class="form-control" id="updateTransactionType" required>
                            <option value="1">Income</option>
                            <option value="0">Expense</option>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label for="updateCategoryId" class="form-label">Category</label>
                        <select class="form-control" id="updateCategoryId" required>
                            @if (Model.Categories != null)
                            {
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            }
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="confirmUpdateBtn">Update</button>
            </div>
        </div>
    </div>
</div>

<!-- Add Transaction Modal -->
<div class="modal fade" id="addTransactionModal" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addModalLabel">Add New Transaction</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addTransactionForm">
                    <div class="mb-3">
                        <label for="addName" class="form-label">Name</label>
                        <input type="text" class="form-control" id="addName" required />
                    </div>
                    
                    <div class="mb-3">
                        <label for="addDate" class="form-label">Date</label>
                        <input type="date" class="form-control" id="addDate" required />
                    </div>
                    
                    <div class="mb-3">
                        <label for="addAmount" class="form-label">Amount</label>
                        <input type="number" class="form-control" id="addAmount" step="0.01" required />
                    </div>
                    
                    <div class="mb-3">
                        <label for="addTransactionType" class="form-label">Type</label>
                        <select class="form-control" id="addTransactionType" required>
                            <option value="1">Income</option>
                            <option value="0">Expense</option>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label for="addCategoryId" class="form-label">Category</label>
                        <select class="form-control" id="addCategoryId" required>
                            @if (Model.Categories != null)
                            {
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            }
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" id="confirmAddBtn">Add</button>
            </div>
        </div>
    </div>
</div>