@model BudgetTracker.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-5 col-lg-4">
        <div class="card shadow-xl border-0 p-4">
            <div class="text-center mb-4">
                <h3 class="fw-bold text-success mb-2">Create Account</h3>
                <p class="text-secondary small">Join us and start tracking your budget</p>
            </div>
            
            <form asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                
                <div class="form-floating mb-3">
                    <input asp-for="Username" class="form-control" placeholder="username" />
                    <label asp-for="Username">Username</label>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                
                <div class="form-floating mb-3">
                    <input asp-for="Password" class="form-control" placeholder="password" />
                    <label asp-for="Password">Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                
                <div class="form-floating mb-3">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="confirm password" />
                    <label asp-for="ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2 mt-4 mb-3">
                    <button type="submit" class="btn btn-success btn-lg">Register</button>
                </div>
            </form>
            
            <div class="text-center mt-3">
                <p class="small text-secondary mb-0">Already have an account? <a asp-action="Login" class="text-success fw-bold text-decoration-none">Login</a></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
