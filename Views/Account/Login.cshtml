@model BudgetTracker.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-5 col-lg-4">
        <div class="card shadow-xl border-0 p-4">
            <div class="text-center mb-4">
                <h3 class="fw-bold text-primary mb-2">Welcome Back</h3>
                <p class="text-secondary small">Enter your details to access your account</p>
            </div>
            
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                
                <div class="form-floating mb-3">
                    <input asp-for="Username" class="form-control" placeholder="username" />
                    <label asp-for="Username">Username</label>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                
                <div class="form-floating mb-3">
                    <input asp-for="Password" class="form-control" placeholder="password" />
                    <label asp-for="Password">Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2 mt-4 mb-3">
                    <button type="submit" class="btn btn-primary btn-lg">Login</button>
                </div>
            </form>
            
            <div class="text-center mt-3">
                <p class="small text-secondary mb-0">Don't have an account? <a asp-action="Register" class="text-primary fw-bold text-decoration-none">Sign up</a></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
